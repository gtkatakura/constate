{
  "compilerOptions": {
    "outFile": "dist/constate.d.ts",
    "target": "esnext",
    "module": "system",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "removeComments": true,
    "stripInternal": true
  },
  "include": [
    "src"
  ]
}